<%- include('../partials/header') %>
<h1 style="margin-bottom: 30px;">FILL THE FORM BELOW TO MAKE CHANGES</h1>
<form action="/players/<%=player.id%>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Player name:</label>
    <input
      autocomplete="off"
      type="text"
      class="form-control"
      id="name"
      name="name"
      placeholder="player name"
      required
    />
  </div>
  
  <div class="mb-3">
    <label for="accolades" class="form-label"
      >Accolades: Please separate them with commas</label
    >
    <input
      autocomplete="off"
      type="text"
      class="form-control"
      id="accolades"
      name="accolades"
      placeholder="Accolades"
      required
    />
  </div>
  <div>
    <label for="content" class="form-label">Content: </label>
  </div>
  <textarea id="accolades" name="content" required></textarea>
  
  <button style="display: block; margin-top: 10px;"class="btn btn-outline-dark " type="submit">Submit</button>
</form>


<%- include('../partials/footer') %>
